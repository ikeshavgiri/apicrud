<!DOCTYPE html>
<html>
  <head>
    <title>Task</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= yield %>

   
      <% flash.each do |key, value| %>  
        <%= content_tag(:div, class: "alert alert-#{key}") do %>  
          <p><%= value %></p>  
        <% end %>  
      <% end %>  
  </body>
</html>
